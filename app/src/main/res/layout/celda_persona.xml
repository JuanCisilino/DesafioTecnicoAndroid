<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/celda_persona_coordinatorlayout">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/celda_persona_imageview"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_marginLeft="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/loading" />


            <TextView
                android:id="@+id/celda_persona_textviewNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/celda_persona_imageview"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:text="@string/nombre_persona"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/celda_persona_textviewApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/celda_persona_imageview"
                android:layout_below="@+id/celda_persona_textviewNombre"
                android:layout_marginLeft="60dp"
                android:text="@string/nombre_persona"
                android:textStyle="bold"
                />


        </RelativeLayout>





</LinearLayout>