<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/celda_persona_coordinatorlayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/celda_persona_CardView"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="20sp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/celda_persona_imageview"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_marginLeft="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/loading" />


            <TextView
                android:id="@+id/celda_persona_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/celda_persona_imageview"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="60dp"
                android:text="@string/nombre_persona"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>